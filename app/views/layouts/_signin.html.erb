<%= form_for(:user, :url => session_path(:user)) do |f| %>
<div class="field">
  <%= f.label :username %><br />
  <%= f.text_field :username, autofocus: true %>
</div>
<div class="field">
  <%= f.label :email %><br />
  <%= f.text_field :email %>
</div>
<div class="field">
  <%= f.label :password %><br />
  <%= f.password_field :password %>
</div>
<%= link_to "Forgot your password?", new_password_path(:user) %>
<br />
<%= f.check_box :remember_me %>
<%= f.label :remember_me %>
<br />
<%= f.submit 'Sign in' %>
<% end %>