<% title "#{@user.email}" %>
<h1><%= @user.email %>'s Profile</h1>
<% if @wip.any? %>
<h2>Works in Progress</h2>
<div class="container-fluid">
  <div class="row">
    <% @wip.each do |project| %>
    <div class="col-sm-12 col-md-2 no-gutter">
      <%= link_to("/artwork_iterations/#{project.artwork_iterations.last.id}", title: project.artwork_iterations.last.name, 
        rel: 'tooltip', relative: true) do %>
        <%= image_tag(project.artwork_iterations.last.image.url(:square), 
        alt: "#{project.artwork_iterations.last.name} by #{project.artwork_iterations.last.user.username}",
        class: 'img-responsive') %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
<% end %>
<% if @projects %>
<h2>Projects</h2>
<div class="container-fluid">
  <div class="row">
    <% @projects.each do |project| %>
    <div class="col-md-2 no-gutter">
      <%= image_tag project.artwork_iterations.last.image.url(:square), class: 'img-responsive' %>
    </div>
    <% end %>
  </div>
</div>
<% end %>